<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_advertComics_iv"
        android:layout_width="0dp"
        android:layout_height="261dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/item_advertComic_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#66000000"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textAppearance="@style/martel_sans_marvel"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_advertComics_iv"
        app:layout_constraintEnd_toEndOf="@+id/item_advertComics_iv"
        app:layout_constraintStart_toStartOf="@+id/item_advertComics_iv"
        tools:text="Spiderman" />
</androidx.constraintlayout.widget.ConstraintLayout>