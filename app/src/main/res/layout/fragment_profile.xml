<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProfileFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_image_iv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:scaleX="4.5"
            android:scaleY="4.5"
            android:src="@drawable/signin_register_bg"
            android:translationY="128dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/profile_welcome_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textAppearance="@style/martel_sans_marvel"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_image_iv"
        tools:text="Welcome User1234" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_signOut_btn"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sign out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/profile_marvelous_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/profile_marvelous_btn"
        app:layout_constraintTop_toBottomOf="@+id/profile_marvelous_btn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_marvelous_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/outline_local_fire_department_24"
        android:drawableRight="@drawable/round_chevron_right_24"
        android:drawableTint="@color/white"
        android:padding="16dp"
        android:text="Marvelous"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:iconGravity="start"
        app:iconSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/profile_signOut_btn"
        app:layout_constraintEnd_toEndOf="@+id/profile_myAccount_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/profile_myAccount_btn"
        app:layout_constraintTop_toBottomOf="@+id/profile_helpCenter_btn" />

    <Button
        android:id="@+id/profile_myAccount_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:drawableLeft="@drawable/outline_account_circle_24"
        android:drawableRight="@drawable/round_chevron_right_24"
        android:drawableTint="@color/white"
        android:gravity="start|center_vertical"
        android:padding="16dp"
        android:text="My Account"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/profile_settings_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_welcome_tv"
        app:layout_constraintVertical_chainStyle="spread" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_settings_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/outline_settings_24"
        android:drawableRight="@drawable/round_chevron_right_24"
        android:drawableTint="@color/white"
        android:padding="16dp"
        android:text="Settings"
        android:textAlignment="textStart"
        android:textSize="16dp"
        app:iconGravity="end"
        app:iconSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/profile_notifications_btn"
        app:layout_constraintEnd_toEndOf="@id/profile_myAccount_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/profile_myAccount_btn"
        app:layout_constraintTop_toBottomOf="@+id/profile_myAccount_btn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_notifications_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/outline_notifications_none_24"
        android:drawableRight="@drawable/round_chevron_right_24"
        android:drawableTint="@color/white"
        android:padding="16dp"
        android:text="Notifications"
        android:textAlignment="textStart"
        android:textSize="16dp"
        app:iconGravity="end"
        app:iconSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/profile_helpCenter_btn"
        app:layout_constraintEnd_toEndOf="@id/profile_settings_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/profile_settings_btn"
        app:layout_constraintTop_toBottomOf="@+id/profile_settings_btn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_helpCenter_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/outline_help_outline_24"
        android:drawableRight="@drawable/round_chevron_right_24"
        android:drawableTint="@color/white"
        android:padding="16dp"
        android:text="Help Center"
        android:textAlignment="textStart"
        android:textSize="16dp"
        app:iconGravity="end"
        app:iconSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/profile_marvelous_btn"
        app:layout_constraintEnd_toEndOf="@id/profile_notifications_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/profile_notifications_btn"
        app:layout_constraintTop_toBottomOf="@+id/profile_notifications_btn" />



</androidx.constraintlayout.widget.ConstraintLayout>